<body>
  <header>
    <h1>Familien-Wichtelspiel</h1>
    <p>Melde dich an und lass dich überraschen, wen du beschenkst!</p>
  </header>
  <main>
    <form id="wichtelForm">
      <input type="text" id="name" placeholder="Dein Name" required>
      <button type="submit">Wichtelpartner ziehen</button>
    </form>
    <div id="result" style="display:none; margin-top:20px;">
      <h2>Dein Wichtelpartner ist:</h2>
      <p id="partnerName"></p>
    </div>
  </main>
  <script>
    const participants = ["Mama", "Papa", "Michele", "Zoe", "Finn", "Leif", "Jette", "Ylvi", "Anouk", "Lys", "Bo", "Oma"];
    let assignedPairs = {};

    document.getElementById('wichtelForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      if (!participants.includes(name)) {
        alert('Name nicht in der Teilnehmerliste.');
        return;
      }
      if (!assignedPairs[name]) {
        const available = participants.filter(participant => participant !== name && !Object.values(assignedPairs).includes(participant));
        if (available.length === 0) {
          alert('Keine Wichtelpartner mehr verfügbar.');
          return;
        }
        assignedPairs[name] = available[Math.floor(Math.random() * available.length)];
      }
      document.getElementById('partnerName').innerText = assignedPairs[name];
      document.getElementById('result').style.display = 'block';
    });
  </script>
</body>
</html>
